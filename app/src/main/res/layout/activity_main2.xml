<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity2">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="50dp"
            android:id="@+id/lottle"
            app:lottie_rawRes="@raw/background3"
            app:lottie_loop="true"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.airbnb.lottie.LottieAnimationView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
                <EditText
                    android:layout_width="match_parent"
                    android:background="@drawable/editextbacraunt"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:textColor="#222222"
                    android:layout_height="wrap_content"
                    android:hint="Имя"
                    android:id="@+id/edittext3"></EditText>
                <EditText
                    android:layout_margin="5dp"
                    android:textColor="#222222"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editextbacraunt"
                    android:hint="Фамилия"
                    android:padding="10dp"
                    android:id="@+id/edittext4"></EditText>
                <EditText
                    android:layout_margin="5dp"
                    android:textColor="#222222"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editextbacraunt"
                    android:hint="Логин"
                    android:padding="10dp"
                    android:id="@+id/edittext5"></EditText>
                <EditText
                    android:layout_margin="5dp"
                    android:textColor="#222222"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editextbacraunt"
                    android:hint="Пароль"
                    android:padding="10dp"
                    android:id="@+id/edittext6"></EditText>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="match_parent"
                            android:id="@+id/bottom1"
                            android:layout_margin="3dp"
                            android:textAllCaps="false"
                            android:textColor="#222222"
                            android:layout_weight="1"
                            android:background="@drawable/bottombacraunt"
                            android:layout_height="wrap_content"
                            android:text="Регистрация"></androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>


</RelativeLayout>